<assembly>
    <id>starter-poms</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <sources>
                <fileSets>
                    <fileSet>
                        <includes>
                            <include>**/pom.xml</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
</assembly>
